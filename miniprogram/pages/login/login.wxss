/* pages/login/login.wxss */
page{
  height: 100%;
  background:#2C61FF;
  background-image: url("https://cdn.jsdelivr.net/gh/linhgf/PicGo/img/20210331150520.png");
}

/*整个界面样式*/
#login{
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}


/*头像样式*/
.userAvatar{
  position: absolute;
  top: 10%;
  left:50%;
  box-shadow: 0 0 0 10rpx rgba(0, 0, 0, 0.15) ;
  border-width: 20px;
  width: 100rpx;
  height: 200rpx;
  transform: translateX(-100rpx);
  border-radius: 50%;
  overflow: hidden;
}

/*下半部样式*/
.userinfo_input{
  display: flex;
  width: 100%;
  height: 80%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background:#ffffff
}

.userinfo_cell_group{
  transform: translateY(80rpx);
  width: 70%;
}

.username_input, .password_input{
  width: 100% !important;
}

.username_block, .password_block{
  margin: 20rpx;
}

.login_button{
  transform: translateY(70rpx);
}

.regist_button{
  font-size: 12px;
  color: #7c7c7c;
  background-color: #ffffff;
  transform: translateY(80rpx);
}

.regist_button::after{
  border: none;
}

.team_name{
  position: absolute;
  bottom: 0%;
}

.team_name text{
  font-size: 12px;
  color: #969696;
}

#van-toast{
  text-align: center !important;
}
/* 头像样式 */
.avatar-wrapper {
    padding: 0;
    width: 80px !important;
    height: 90px;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
  }
  
  .avatar {
    display: block;
    width: 80px;
    height: 80px;
  }