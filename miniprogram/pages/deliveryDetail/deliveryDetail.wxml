<!--pages/castDetail/castDetail.wxml-->
<view class="page">
   <view class="Basic"> 填写快递信息</view>
   <view class="NormalElement">
                    <view class="label1"><view>快递名称</view></view>
                    <view class="text"><input type="text" style="width: 158px; height: 25px;" name="message" placeholder="请输入快递的名称" bindinput="nameInput" /></view>
                    <view class="view_fengexian">
	                 <view ></view><view ></view>
                    </view>
                    <view class="label1"> <view>驿站地址</view> </view>
                    <view class="text"><input type="text" style="width: 158px; height: 25px;" name="message" id="password" placeholder="如：白沙邮局" bindinput="itemInput"/></view>
                    <view class="view_fengexian">
	                 <view ></view><view ></view>
                    </view>
                    <view class="label1"><view>用户地址</view></view>
                    <view class="text"><input type="text" style="width: 158px; height: 25px;" name="message" id="password_ensure" placeholder="如：碧峰2舍" bindinput="userInput" /></view>
                    <view class="view_fengexian">
	                 <view ></view><view ></view>
                    </view>
                    <view class="label1"> <view>快递大小</view> </view>
                    <view class="text"><input type="text" style="width: 158px; height: 25px;" name="message" id="password_ensure" placeholder="请描述快递大小" placeholder-class="placeItem" bindinput="sizeInput" /></view>
                    <view class="view_fengexian">
	                 <view ></view><view ></view>
                    </view>
                    <view class="label1"> <view>取件码</view> </view>
                    <view class="text"><input type="text" style="width: 158px; height: 25px;" name="message" id="password_ensure" placeholder="如：103-5" placeholder-class="placeItem" bindinput="codeInput" /></view>
                    <view class="view_fengexian">
	                 <view ></view><view ></view>
                    </view>
                </view>
   <button style="width: 150px; background-color: #14dbe9;"  class="uploadTip" bindtap="upload" type="primary"> 上传快递图片 </button>
   <view>
      <image class="itemImage" src="{{imgUrl}}"></image>
   </view>
   <button style="width: 150px; background-color: #14dbe9; margin-bottom: 50px;"  class="uploadTip" bindtap="public" type="primary"> 发布 </button>
</view>
